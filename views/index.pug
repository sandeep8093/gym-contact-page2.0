doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title #{title}
  style 
   include ../static/style.css
nav
  ul
    li
      a(href='/') Home
    li
      a(href='/') About
    li
      a(href='/') Contact Us
.container
  h2  Fill this form to get Gym Membership!!
  form#contact(action='/' method='post')
    input#name(type='text' name='name' placeholder='Enter your name')
    input#age(type='text' name='age' placeholder='Enter your age')
    input#gender(type='text' name='gender' placeholder='Enter your gender')
    textarea#address(name='address' cols='30' rows='10' placeholder='Enter your address')
    textarea#more(name='more' cols='30' rows='10' placeholder='More about you..')
    button.btn Submit
